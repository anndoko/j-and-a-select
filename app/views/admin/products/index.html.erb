<!--=== 頁面標題 ===-->
<h2><%= t('product-index') %></h2>

<!--=== 新增商品 ===-->
<div class='pull-right'>
  <%= link_to(t('btn-product-new'), new_admin_product_path, :class => 'btn btn-sm btn-default')%>
</div>

<!--=== 商品列表 ===-->
<table class='table'>
  <!--=== 商品列表標題 ===-->
  <thead>
    <tr>
      <th></th>
      <th><%= t('f-product-name') %></th>
      <th><%= t('f-product-brand') %></th>
      <th><%= t('f-product-category') %></th>
      <th><%= t('f-category-group') %></th>
      <th><%= t('f-product-price') %></th>
      <th><%= t('f-product-quantity') %></th>
      <th><%= t('f-options') %></th>
    </tr>
  </thead>

  <!--=== 商品列表內容 ===-->
  <% @products.each do |product| %>
    <tr>

        <td><%= render_product_status(product) %></td>
        <td><%= link_to(product.name, admin_product_path(product)) %></td>
        <td><%= product.brand.name %></td>
        <td><%= product.category.name %></td>
        <td><%= product.category.category_group.name %></td>
        <td><%= product.price %></td>
        <td><%= product.quantity %></td>

      <!--=== 操作選項 ===-->
      <td>
        <!-- 編輯 -->
        <%= link_to(t('btn-edit'), edit_admin_product_path(product), :class => 'btn btn-sm btn-default') %>
        <!-- 發佈 / 隱藏 -->
        <%= render_product_publish_or_hide(product) %>
      </td>
    </tr>
  <% end %>
</table>
